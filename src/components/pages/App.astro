---
import Layout from "../../layouts/Layout.astro";
import { getI18N } from "../../i18n";
import GameEn from "../GameEn.astro";
import GameEs from "../GameEs.astro";
import GameCa from "../GameCa.astro";
const { currentLocale } = Astro;
import LanguageSelector from "../LanguageSelector.astro";
const i18n = getI18N({ currentLocale });
---

<Layout title={i18n.SEO.TITLE.HOME} description="La pagina de dotacio">
  <LanguageSelector />
  {currentLocale === "en" && <GameEn />}
  {currentLocale === "es" && <GameEs />}
  {currentLocale === "ca" && <GameCa />}
</Layout>
